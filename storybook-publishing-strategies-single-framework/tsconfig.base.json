{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@storybook-publishing-strategies-single-framework/admin-ui-footer": [
        "libs/admin/ui/footer/src/index.ts"
      ],
      "@storybook-publishing-strategies-single-framework/admin-ui-header": [
        "libs/admin/ui/header/src/index.ts"
      ],
      "@storybook-publishing-strategies-single-framework/client-ui-footer": [
        "libs/client/ui/footer/src/index.ts"
      ],
      "@storybook-publishing-strategies-single-framework/client-ui-header": [
        "libs/client/ui/header/src/index.ts"
      ],
      "@storybook-publishing-strategies-single-framework/shared-ui-button": [
        "libs/shared/ui/button/src/index.ts"
      ],
      "@storybook-publishing-strategies-single-framework/shared-ui-main": [
        "libs/shared/ui/main/src/index.ts"
      ],
      "@storybook-publishing-strategies-single-framework/shared-ui-notification": [
        "libs/shared/ui/notification/src/index.ts"
      ],
      "@storybook-publishing-strategies-single-framework/storybook-host": [
        "storybook-host/src/index.ts"
      ],
      "@storybook-publishing-strategies-single-framework/storybook-host-admin": [
        "storybook-host-admin/src/index.ts"
      ],
      "@storybook-publishing-strategies-single-framework/storybook-host-client": [
        "storybook-host-client/src/index.ts"
      ],
      "@storybook-publishing-strategies-single-framework/storybook-host-shared": [
        "storybook-host-shared/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
