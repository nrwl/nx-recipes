#
# Build the docker image with `npx nx docker-build store-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t store-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system store-api && \
          adduser --system -G store-api store-api

COPY dist/store-api store-api
RUN chown -R store-api:store-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix store-api --omit=dev -f install

CMD [ "node", "store-api" ]
